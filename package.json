{
  "name": "vscode-merlin",
  "description": "VS Code Merlin Extension",
  "author": "Andrey Popp <8mayday@gmail.com>",
  "publisher": "andreypopp",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocaml/melrin"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "onLanguage:reason",
    "onLanguage:ocaml"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "merlin-language-server.restart",
        "title": "Restart Merlin Language Server"
      }
    ],
    "languages": [
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ],
        "configuration": "./language.reason.json"
      },
      {
        "id": "ocaml",
        "aliases": [
          "OCaml"
        ],
        "extensions": [
          ".ml",
          ".mli"
        ],
        "configuration": "./language/ocaml.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Merlin configuration",
      "properties": {}
    },
    "grammars": [
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntax/ocaml.json"
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntax/reason.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint '**/*.ts' --cache",
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test:esy": "node ./test/runEsyTests.js",
    "test:opam": "node ./test/runOpamTests.js",
    "test": "npm run test:esy && npm run test:opam",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^8.1.0",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "typescript": "^3.1.3",
    "vsce": "^1.69.0",
    "vscode": "^1.1.36",
    "vscode-test": "^1.2.3"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  }
}
