(library (name SampleEsyLibrary) (public_name sample-esy.library)
    (modules (:standard \ SampleEsyLibraryPesyModules))
    (libraries sample-esy.library.pesy-modules)
    (flags -open SampleEsyLibraryPesyModules))
(library (public_name sample-esy.library.pesy-modules)
    (name SampleEsyLibraryPesyModules) (modules SampleEsyLibraryPesyModules)
    (libraries console.lib pastel.lib))
(rule
    (with-stdout-to SampleEsyLibraryPesyModules.re
        (run echo  "module Console = Console;\
                  \nmodule Pastel = Pastel;")))
